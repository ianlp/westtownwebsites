  <script defer>
    function addLoadedClass() {
      document.body.classList.add("loaded");
      gsap.registerPlugin(ScrollTrigger, ScrollToPlugin);
    }

    // Initial load
    addLoadedClass();

    // Run after every page navigation
    document.addEventListener("astro:afterRender", () => {
      addLoadedClass();
    });
  </script>

