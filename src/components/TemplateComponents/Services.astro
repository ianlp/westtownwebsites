<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Ensure GSAP is available
    if (typeof gsap === "undefined") {
      console.error("GSAP is not loaded.");
      return;
    }

    const services = document.querySelectorAll(".services__item");

    services.forEach((service) => {
      const overlay = service.querySelector(".service__overlay");
      const details = overlay.querySelector(".service__details");

      // Set initial states
      gsap.set(overlay, { backgroundColor: "rgba(0, 0, 0, 0)" });
      gsap.set(details, { opacity: 0, y: 20 });

      // Create hover animation timeline
      const hoverTimeline = gsap.timeline({ paused: true });

      hoverTimeline
        .to(overlay, {
          backgroundColor: "rgba(0, 0, 0, 0.7)",
          duration: 0.5,
          ease: "power2.out",
        })
        .to(
          details,
          { opacity: 1, y: 0, duration: 0.5, ease: "power2.out" },
          "-=0.3"
        );

      // Event listeners
      service.addEventListener("mouseenter", () => hoverTimeline.play());
      service.addEventListener("mouseleave", () => hoverTimeline.reverse());
    });
  });
</script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    gsap.registerPlugin(ScrollTrigger);

    // Animate .intro__content from bottom when scrolled into view
    gsap.from(".intro__content", {
      scrollTrigger: {
        trigger: ".intro__content",
        start: "top 80%",
        end: "bottom 20%",
        scrub: true,
        toggleActions: "play none none reverse",
      },
      y: 100, // Start from 100px below
      duration: 1.5,
      ease: "power3.out",
    });

    gsap.fromTo(
      ".intro__content",
      {
        opacity: 0,
      },
      {
        opacity: 1,
        duration: 2,
        scrollTrigger: {
          trigger: ".intro__content",
          start: "top 80%",
          end: "bottom 20%",
          scrub: true,
          toggleActions: "play none none reverse",
        },
      }
    );

    // Animate .intro__image from left when scrolled into view
    gsap.from(".intro__image", {
      scrollTrigger: {
        trigger: ".intro__image",
        start: "top 80%",
        end: "bottom 20%",
        scrub: true,
        toggleActions: "play none none reverse",
      },
      x: -100, // Start from 100px to the left
      duration: 1.5,
      ease: "power3.out",
    });

    gsap.fromTo(
      ".intro__image",
      {
        opacity: 0,
      },
      {
        opacity: 1,
        duration: 2,
        scrollTrigger: {
          trigger: ".intro__image",
          start: "top 80%",
          end: "bottom 20%",
          scrub: true,
          toggleActions: "play none none reverse",
        },
      }
    );

    // Animate .service--image-right elements from left off canvas
    gsap.utils.toArray(".service--image-right").forEach((el) => {
      gsap.from(el, {
        scrollTrigger: {
          trigger: el,
          start: "top 90%",
          end: "bottom 10%",
          scrub: true,
          toggleActions: "play none none reverse",
        },
        x: "-100%", // Start from 150px to the left
        opacity: 0,
        duration: 1.5,
        ease: "power3.out",
      });
    });

    // Animate .service--image-left elements from right off canvas
    gsap.utils.toArray(".service--image-left").forEach((el) => {
      gsap.from(el, {
        scrollTrigger: {
          trigger: el,
          start: "top 90%",
          end: "bottom 10%",
          scrub: true,
          toggleActions: "play none none reverse",
        },
        x: "100%", // Start from 150px to the right
        opacity: 0,
        duration: 1.5,
        ease: "power3.out",
      });
    });
  });
</script>
