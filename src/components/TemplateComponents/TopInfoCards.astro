    }
  }

  .ib-section > aside {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  .ib-wrapper {
    width: 100%; /* Initial width */
    min-height: 400px; /* Initial height */
    transition:
      width 0.5s ease,
      height 0.5s ease;
    overflow: hidden; /* Prevent content from overflowing during the animation */
    border: 1px solid #f4f4f4;
    border-radius: 8px;
    margin: 20px;
    display: inline-block;
  }

  .ib-wrapper.expanded {
    width: 100%; /* Expand to full width */
  }

  .ib-wrapper.full-height {
    height: 100%; /* Expand to full height (full viewport height) */
  }

  .ib-content {
    // position: absolute; /* Keep content in place */
    // top: 0;
    // left: 0;
    // width: 100%;
    // height: 100%;
  }

  .ib-content img {
    width: 100%;
    height: auto;
  }

  .ib-content .content-text {
    display: none;
  }

  .ib-content .close-btn {
    display: none;
    position: absolute;
    top: 10px;
    right: 10px;
  }

  .ib-wrapper.expanded .ib-content .close-btn {
    display: block;
  }
</style>

