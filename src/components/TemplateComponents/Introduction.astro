<script>
  document.addEventListener("DOMContentLoaded", () => {
    gsap.registerPlugin(ScrollTrigger);

    // Animate .intro__content from bottom when scrolled into view
    gsap.from(".intro__content", {
      scrollTrigger: {
        trigger: ".intro__content",
        start: "top 80%",
        end: "bottom 20%",
        scrub: true,
        toggleActions: "play none none reverse",
      },
      y: 100, // Start from 100px below
      duration: 1.5,
      ease: "power3.out",
    });

    gsap.fromTo(
      ".intro__content",
      {
        opacity: 0,
      },
      {
        opacity: 1,
        duration: 1,
        scrollTrigger: {
          trigger: ".intro__content",
          start: "top 80%",
          end: "bottom 40%",
          scrub: true,
          toggleActions: "play none none reverse",
        },
      }
    );

    // Animate .intro__image from left when scrolled into view
    gsap.from(".intro__image", {
      scrollTrigger: {
        trigger: ".intro__image",
        start: "top 80%",
        end: "bottom 20%",
        scrub: true,
        toggleActions: "play none none reverse",
      },
      x: -100, // Start from 100px to the left
      duration: 1.5,
      ease: "power3.out",
    });

    gsap.fromTo(
      ".intro__image",
      {
        opacity: 0,
      },
      {
        opacity: 1,
        duration: 1,
        scrollTrigger: {
          trigger: ".intro__image",
          start: "top 80%",
          end: "bottom 40%",
          scrub: true,
          toggleActions: "play none none reverse",
        },
      }
    );
  });
</script>
